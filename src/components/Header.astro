---
import {Image} from 'astro:assets';
import logo from '../../public/logo.png';
---

<header id="principal-header" class="fixed top-0 left-0 w-full bg-transparent z-50 transition-all duration-300 ease-in-out">
    <div id="contenedor-header" class="max-w-7xl mx-auto px-12 sm:px-6 lg:px-8 py-6 transition-all duration-300 ease-in-out">
      <div class="flex justify-between items-center h-16 ml-8">
        <Image src={logo} alt="Logo mecatronic" class="h-30 w-auto bg-cover 00" id="logo-me"/>
        <nav id="navegacion" class="space-x-6 text-white text-sm px-12">
          <a href="#" class="nav-link hover:text-red-700 transition" >Sobre Nosotros</a>
          <a href="#" class="nav-link hover:text-red-700 transition" >Servicios</a>
          <a href="#" class="nav-link hover:text-red-700 transition" >Proyectos</a>
          <a href="#" class="nav-link hover:text-red-700 transition" >Nuestros Clientes</a>
          <a href="#" class="nav-link hover:text-red-700 transition" >Contacto</a>
        </nav>
      </div>
    </div>
  </header>
  

<script is:inline>
    const header = document.getElementById("principal-header");
    const content = document.getElementById("contenedor-header");
    const logoM = document.getElementById("logo-me");
    const navLinks = document.querySelectorAll(".nav-link")
  
    window.addEventListener("scroll", () => {
      if (window.scrollY > 0) {
        content.classList.remove("py-6");
        content.classList.add("py-2");

        header.classList.remove("bg-transparent")
        header.classList.add("shadow-md", "bg-white", );
        

        logoM.classList.remove("text-2xl", "h-12");
        logoM.classList.add("text-lg", "h-8")

        navLinks.forEach(link =>{
          link.classList.remove("text-white");
          link.classList.add("text-black");
        })

      } else{
        content.classList.remove("py-2");
        content.classList.add("py-6");

        header.classList.remove("shadow-md", "bg-white");
        header.classList.add("bg-transparent")

        logo.classList.remove("text-lg", "h-8");
        logo.classList.add("text-2xl", "h-12");

        navLinks.forEach(link =>{
          link.classList.remove("text-black");
          link.classList.add("text-white");
        })
        
      }
    });
  </script>