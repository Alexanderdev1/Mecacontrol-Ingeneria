---
interface Props{
    titulo :string,
    imagenUrl: string
}

const{ titulo,imagenUrl} = Astro.props;
---

<div class="rounded-2xl overflow-hidden border p-6 shadow-lg hover:shadow-red-600 hover:scale-95 transition duration-300 max-w-md mx-auto">
    <img src={imagenUrl} alt={titulo} class="w-[300px] h-auto object-contain">
    <h3 class="text-center text-lg font-semibold text-gray-800 mt-4">{titulo}</h3>
</div>
