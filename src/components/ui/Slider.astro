---
const {titulo,descripcion,imagenUrl} = Astro.props;
---

<section class="bg-black/90 px-4 sm:px-6 md:px-10 pt-16 pb-8 sm:py-12 mb-16 sm:mb-24 w-full h-auto min-h-[400px] sm:h-[500px]">
  <div class="max-w-[1300px] mx-auto flex flex-col md:flex-row justify-between items-center h-full gap-6 md:gap-0">

    <!-- Columna izquierda -->
    <div class="md:w-1/2 mb-6 md:mb-0 px-2 sm:px-0 mt-6 sm:mt-0">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-red-600 tracking-tighter mb-3 sm:mb-4">{titulo}</h2>
      <p class="text-base sm:text-lg text-white leading-relaxed">
        {descripcion}
      </p>
    </div>

    <!-- Columna derecha -->
    <div class="md:w-1/2 flex justify-center w-full md:w-auto">
      <img src={imagenUrl} alt="Cables elÃ©ctricos" 
           class="h-[250px] sm:h-[300px] w-full max-w-[500px] object-cover rounded-xl sm:rounded-2xl shadow-lg">
    </div>

  </div>
</section>
