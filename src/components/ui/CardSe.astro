---
interface Props {
  icono: string
  titulo: string
  descripcion: string
  lista: string[]
  imagenUrl: string
  enlace: string
}

const { icono, titulo, descripcion, lista, imagenUrl, enlace } = Astro.props;
---

<section class="grid grid-cols-1 md:grid-cols-2 items-center gap-5 py-8 px-4 max-w-6xl mx-auto">
  <div class="space-y-4">
    <div class="flex flex-col items-start gap-3">
      <div class="bg-red-100 text-red-600 p-2 rounded-full text-xl">
        <img src={icono} alt={titulo} class="w-10 h-10"> 
      </div>
      <h2 class="text-xl font-bold uppercase">{titulo}</h2>
    </div>

    <p class="text-sm text-gray-600">{descripcion}</p>

    <!-- Lista -->
    <ul class="space-y-1 text-sm">
      {lista.map((item) => (
        <li class="flex items-center gap-2">
          <span>→</span>
          <span>{item}</span>
        </li>
      ))}
    </ul>

    <a href={enlace} class="inline-block bg-red-600 text-white px-5 py-2 rounded-md hover:bg-red-700 transition mt-4">
      Solicitar información
    </a>
  </div>


  <div class="flex justify-center">
    <img src={imagenUrl} alt={titulo} class="w-full max-w-md rounded-xl bg-gray-300 object-cover" />
  </div>
</section>
