---
interface Props{
    nombre:string,
    categoria:string,
    descripcion:string,
    imagenUrl:string
}

const { nombre, categoria, descripcion, imagenUrl } = Astro.props;
---

<div class="border rounded-lg p-4 w-full max-w-xs text-center shadow hover:shadow-md transition">
  <img src={imagenUrl} alt={nombre} class="w-24 h-24 object-cover mx-auto mb-4 rounded" />
  <h3 class="font-semibold">{nombre}</h3>
  <p class="text-sm text-gray-600">{categoria}</p>
  <p class="text-sm mt-2 text-gray-700">{descripcion}</p>
</div>
