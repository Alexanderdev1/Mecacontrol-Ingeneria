import CardCli from "../ui/CardCli.astro";
const seleccionarImagen =(name:string) => `../../public/imagenes/${name}`;

const cards = [
  {
    nombre: "desk",
    categoria: "empresa",
    descripcion: "uwuw",
    imagenUrl: seleccionarImagen('coliseo.png'),
  },
  {
    nombre: "desk",
    categoria: "empresa",
    descripcion: "uwuw",
    imagenUrl: seleccionarImagen('veolia.png'),
  },
  {
    nombre: "desk",
    categoria: "empresa",
    descripcion: "uwuw",
    imagenUrl: seleccionarImagen('disarko.png'),
